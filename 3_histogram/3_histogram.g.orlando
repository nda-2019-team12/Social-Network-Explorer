# it is a two month period from 2016/05/13 till 2016/07/12.
dt.r.orlando.subset <- subset(dt.reddit.master, date > "2016-05-13" & date < "2016-07-12")

#histogram
ggplot(dt.r.orlando.subset, aes(x = TIMESTAMP)) + geom_histogram() + 
  scale_x_datetime(date_labels = "%m/%d", breaks = "1 day") + ggtitle("Orlando Shooting")
  labs(y = "Count", x = "Date") + theme(axis.text.x = element_text(size = 7, angle = 90))
